{
  "name": "k2think-api-builder",
  "version": "1.2.0",
  "description": "Библиотека для создания кастомных JSON API на основе K2Think.ai",
  "main": "src/index.js",
  "type": "commonjs",
  "scripts": {
    "start": "node src/api-builder.js",
    "demo": "node src/api-builder.js",
    "dialog": "node src/k2think-dialog.js",
    "universal": "node src/universal-dialog.js",
    "json": "node src/k2think-json-builder.js",
    "cookies": "node src/cookie-converter.js",
    "api": "node src/api-builder.js",
    "analyze": "node har-analyzer.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "docs": "jsdoc -c jsdoc.conf.json",
    "build": "npm run lint && npm run test",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "k2think",
    "api",
    "builder",
    "json",
    "ai",
    "chatbot",
    "nlp",
    "text-analysis",
    "content-generation",
    "classification",
    "translation",
    "dialog",
    "memory"
  ],
  "author": {
    "name": "HEDELKA",
    "email": "HEDELKA@yandex.ru"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/HEDELKA/k2think-api-builder.git"
  },
  "bugs": {
    "url": "https://github.com/HEDELKA/k2think-api-builder/issues"
  },
  "homepage": "https://github.com/HEDELKA/k2think-api-builder#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.5"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/index.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error"
    }
  },
  "files": [
    "src/",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "SETUP.md"
  ]
}
